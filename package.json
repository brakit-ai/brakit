{
  "name": "brakit",
  "version": "0.1.0",
  "description": "Understand your every API call like never before.",
  "type": "module",
  "bin": {
    "brakit": "./dist/bin/brakit.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brakit-ai/brakit.git"
  },
  "homepage": "https://www.brakit.ai",
  "bugs": {
    "url": "https://github.com/brakit-ai/brakit/issues"
  },
  "author": "dev@brakit.ai",
  "dependencies": {
    "citty": "^0.1.6",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "keywords": [
    "api-monitoring",
    "request-tracing",
    "n-plus-one",
    "duplicate-detection",
    "security-scanning",
    "devtools",
    "nextjs",
    "dashboard",
    "performance",
    "database-queries",
    "http-proxy",
    "zero-config"
  ]
}
